{%- if include.title -%}
    {% assign title = include.title | default: page.title %}
{% else %}
    {% assign title = page.heading | default: page.title %}
{% endif %}
{% assign subtitle = include.subtitle | default: page.subtitle %}
{% assign smalltitle = include.smalltitle | default: page.smalltitle %}
{% assign image = include.image | default: page.image %}
{% assign alt = include.alt | default: page.alt %}

<!-- INDEX -->
