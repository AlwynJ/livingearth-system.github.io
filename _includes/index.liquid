        <div class="row">
            <div class="col-12 col-lg-8 welcome-living-earth">
                {%- if smalltitle -%}<h5>{{ smalltitle }}</h5>{% endif %}
                {%- if title -%}<h1>{{ title }}</h1>{% endif %}
                {%- if subtitle -%}<p>{{ subtitle }}</p>{% endif %}
                <div class="welcome-living-button">
                    {%- if nobuttons != true -%}
